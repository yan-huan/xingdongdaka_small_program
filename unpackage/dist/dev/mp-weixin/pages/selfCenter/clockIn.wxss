.imgheit {
  width: 150rpx;
  height: 180rpx;
}
.btn_bar {
  position: fixed;
  bottom: 0;
  width: 92%;
  margin-bottom: 10rpx;
}
.textare-heght {
  min-height: 250rpx;
  max-height: 400rpx;
}
.mp3img {
  position: absolute;
  width: 100%;
  height: 300rpx;
  bottom: 0;
  z-index: 999;
}
#canvas {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  z-index: 10;
}
.recording-button {
  position: absolute;
  box-sizing: border-box;
  display: inline-block;
  width: 90rpx;
  height: 90rpx;
  border: 1px dashed #1296DB;
  border-radius: 100rpx;
  background: url(data:image/png;base64,) no-repeat 50% 50%;
  background-size: 50% 50%;
  z-index: 100;
  right: 10rpx;
  top: 10rpx;
}
.marginbottom {
  margin-bottom: 30rpx;
}
.textheit {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}


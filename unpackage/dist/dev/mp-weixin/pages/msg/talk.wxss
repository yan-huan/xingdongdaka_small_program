/*公共样式*/
.talk {
  padding: 12rpx 30rpx;
}
.talkInput {
  position: fixed;
  left: 0;
  width: 100%;
  bottom: 30rpx;
  text-align: center;
}
.talkInput .uni-input {
  border: 1px solid #d9d9d9;
  border-radius: 5px;
  height: 50rpx;
  width: 90%;
  display: inline-block;
}
.talkli {
  font-size: 26rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 12rpx 0;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.talkli .talkHead {
  padding: 12rpx;
}
.talkli .talkInfo {
  border: 1px solid #d9d9d9;
  border-radius: 5px;
  padding: 12rpx;
  position: relative;
}
.talkli .talkInfo .arrow {
  position: absolute;
  top: 50%;
  margin-top: -12rpx;
  width: 19rpx;
  height: 24rpx;
  display: block;
  z-index: 10;
  background: #fff;
}
.talkli .talkInfo .arrow.left {
  left: -14rpx;
}
.talkli .talkInfo .arrow.right {
  right: -14rpx;
}


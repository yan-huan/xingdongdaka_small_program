.formAction {
  padding: 0 30rpx 150rpx 30rpx;
  font-size: 28rpx;
}
.uni-form-item .title {
  padding: 15rpx 0;
  font-weight: bold;
}
.uni-form-item .form-item {
  height: 68rpx;
  line-height: 68rpx;
  margin-bottom: 12rpx;
  padding: 0 20rpx;
}
.uni-form-item .form-item:not(.nobtm) {
  border-bottom: 1px solid #ffa700;
}
.btn_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
}
.btn_bar .btns {
  height: 120rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.btn_bar .btns .btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  background: #ffa700;
  font-size: 28rpx;
}
.sb-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 65rpx;
  border: 1px solid #ffa700;
  border-radius: 5px;
  overflow: hidden;
  position: relative;
}
.sb-box .select {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.sb-box .select .sb-input {
  padding: 0 20rpx;
  color: #666;
}
.sb-box .sb-icon {
  position: absolute;
  height: 65rpx;
  right: 0;
  z-index: -1;
  background: #ffa700;
  width: 55rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.sb-box .sb-icon .triangle {
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 10rpx solid #fff;
}
.sb-box .uni-input {
  padding-left: 10rpx;
}
.sb-box .labeChech {
  padding-left: 5rpx;
}

